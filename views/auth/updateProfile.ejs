<script type="text/ng-template" id="/update-profile.html">
    <h1>Update profile</h1>

    <flash-message duration="5000" show-close="true"></flash-message>

    <form ng-submit="vm.updateProfile()" class="margin-top-30">
        <div class="form-group">
            <label for="website">Website</label>
            <input type="text"
                   id="website"
                   class="form-control"
                   placeholder="http://www.rubenvermeulen.be"
                   ng-model="vm.user.website"></input>
        </div>
        <div class="form-group">
            <label for="about">About</label>
            <textarea id="about" class="form-control" placeholder="Some information about yourself." ng-model="vm.user.about"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update profile</button>
    </form>
</script>